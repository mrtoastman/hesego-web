{
	"apiVersion": 2,
	"name": "surecart/button",
	"title": "Button",
	"description": "Display a checkout form button.",
	"category": "surecart",
	"keywords": ["button", "submit", "checkout", "engine"],
	"textdomain": "surecart",
	"ancestor": ["surecart/form"],
	"example": {
		"attributes": {
			"type": "primary",
			"text": "Button Text"
		}
	},
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"text": {
			"type": "string",
			"default": "Purchase"
		},
		"type": {
			"type": "string",
			"default": "primary"
		},
		"submit": {
			"type": "boolean",
			"default": true
		},
		"size": {
			"type": "string",
			"default": "large"
		},
		"full": {
			"type": "boolean",
			"default": true
		}
	},
	"editorScript": "surecart-components",
	"script": "surecart-components",
	"viewScript": "surecart-components",
	"editorStyle": "surecart-themes-default",
	"style": "surecart-themes-default"
}
